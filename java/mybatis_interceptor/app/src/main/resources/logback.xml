<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- MyBatis SQL logging -->
    <logger name="org.apache.ibatis" level="DEBUG" />
    <logger name="org.apache.ibatis.executor.Executor" level="DEBUG" />
    <logger name="org.apache.ibatis.transaction" level="DEBUG" />
    <logger name="org.apache.ibatis.session" level="DEBUG" />
    
    <!-- JDBC logging -->
    <logger name="java.sql" level="DEBUG" />
    <logger name="java.sql.Connection" level="DEBUG" />
    <logger name="java.sql.Statement" level="DEBUG" />
    <logger name="java.sql.PreparedStatement" level="DEBUG" />
    <logger name="java.sql.ResultSet" level="DEBUG" />
    
    <!-- Our mapper logging -->
    <logger name="org.example.mapper" level="DEBUG" />
    
    <!-- Interceptor logging -->
    <logger name="org.example.interceptor" level="DEBUG" />
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
    
</configuration>