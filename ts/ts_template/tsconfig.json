{
	"extends": "@tsconfig/node20/tsconfig.json",
	"compilerOptions": {
		"module": "nodenext",
		"moduleResolution": "NodeNext",
		"outDir": "dist",
		"baseUrl": "./",
		"esModuleInterop": true,
		"traceResolution": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"paths": {
			"src/*": [
				"src/*"
			]
		},
		"types": [
			"node",
			"jest"
		]
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	],
	"tsc-alias": {
		"resolveFullPaths": true
	}
}